<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_start_search_route"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="开始路线规划"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#fff"
        android:background="@drawable/home_page_content_bg"
        />

    <TextView
        android:id="@+id/tv_start_driver_passenger_syn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/tv_start_search_route"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="开始司乘"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#fff"
        android:background="@drawable/home_page_content_bg"
        />

    <TextView
        android:id="@+id/tv_start_simulate_navi"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/tv_start_driver_passenger_syn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="开始模拟导航"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#fff"
        android:background="@drawable/home_page_content_bg"
        />

    <TextView
        android:id="@+id/tv_start_navi"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/tv_start_simulate_navi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="开始真实导航"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#fff"
        android:background="@drawable/home_page_content_bg"
        />
</RelativeLayout>
